{
  "name": "projecthub-backend",
  "version": "1.0.0",
  "description": "ProjectHub Backend API - Fullstack AgTech Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=lcov --collectCoverageFrom='src/**/*.js' --coverageDirectory=coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --coverageReporters=lcov --reporters=default --reporters=jest-junit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "projecthub",
    "agtech",
    "api",
    "plant-disease",
    "ai"
  ],
  "author": "ProjectHub Team",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.4.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "node-cron": "^4.2.1",
    "sib-api-v3-sdk": "^8.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^30.2.0",
    "eslint": "^9.11.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest": {
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(mongoose)/)"
  ],
  "moduleFileExtensions": ["js", "json", "node"],
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/__tests__/**",
    "!src/config/**",
    "!src/server.js"
  ],
  "coverageReporters": ["text", "lcov", "html"]
}

}
